@page
@model ECommerceRazor.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Lista de Categorias";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-item-center mb-3">
        <h2>Lista de Categorias</h2>
        <a asp-page="Crear" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i> Nueva Categoria
        </a>
    </div>

    @if (Model.Categories != null && Model.Categories.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>@Html.DisplayNameFor(model => model.Categories[0].Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Categories[0].DisplayOrder)</th>
                    <th>Fecha de Creacion</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var categoria in Model.Categories)
                {
                    <tr>
                        <td>@categoria.Id</td>
                        <td>@categoria.Name</td>
                        <td>@categoria.DisplayOrder</td>
                        <td>@categoria.CreationDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-page="Editar" asp-route-id="@categoria.Id" class="btn btn-sm btn-warning">
                                <i class="fa-solid fa-pencil"></i> Editar
                            </a>
                            <a asp-page="Detalle" asp-route-id="@categoria.Id" class="btn btn-sm btn-info">
                                <i class="fa-solid fa-circle-info"></i> Detalle
                            </a>
                            <a asp-page="Borrar" asp-route-id="@categoria.Id" class="btn btn-sm btn-danger">
                                <i class="fa-solid fa-trash-can"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No hay categorias registradas aun
        </div>
    }
</div>
